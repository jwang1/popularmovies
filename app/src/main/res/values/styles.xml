<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie_textview_style" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/movie_listview_height</item>
        <item name="android:text">Movies</item>
    </style>

    <style name="movie_listview_style" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/movie_listview_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/movie_listview_background</item>
    </style>

    <style name="movie_gridview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:columnWidth">@dimen/movie_gridview_column_width</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/movie_gridview_horizontal_spacing</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/movie_gridview_vertical_spacing</item>
    </style>

    <style name="movie_details_textviw_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
